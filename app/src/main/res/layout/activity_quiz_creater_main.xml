<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amychau.multiplechoicetest.QuizCreaterMain"
    android:orientation="vertical">

  <include layout="@layout/app_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="28dp"
        android:layout_marginBottom="40dp"
        />

    <Button
        android:id="@+id/mc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="#33FF8D"
        android:text="@string/createQ"
        android:textColor="#000000" />

    <Button
        android:id="@+id/questionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33FF8D"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"
        android:text="@string/qList"
        />

    <Button
        android:id="@+id/importQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33FF8D"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"
        android:text="@string/importList"
        />

    <Button
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33FF8D"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"
        android:text="@string/stats"
        />


</LinearLayout>
